{% extends 'layout/layout.html.twig' %}
{% block section %}
    {{form_start(form)}}
    <div class="form-group">
        {{form_row(form.name, {'attr' : {
            'class' : 'form-control'
        }})}}
    </div>
    <div class="form-group">
        {{form_row(form.image, {'attr' : {
            'class' : 'form-control-file'
        }})}}
    </div>
    {{form_row(form.save, {'attr' : {
        'class' : 'btn btn-primary'
    }})}}
    {{form_end(form)}}
{% endblock %}
