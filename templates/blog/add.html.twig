{% extends 'layout/layout.html.twig' %}
{% block title %}Cr√©er un post{% endblock %}
{% block section %}
  <h1>Formulaire</h1>
    {{ form_start(form) }}
  <div class="form-group">
      {{ form_row(form.title, { 'attr': {
          'class' : 'form-control'
      }}) }}
  </div>
  <div class="form-group">
      {{ form_row(form.description,{ 'attr': {
          'class' : 'form-control'
      }}) }}
  </div>

    {% if title is defined %}
      <img src="{{ asset(blog.image) }}" alt="" style="height: 200px; width: 300px;">
    {% endif %}

  <div class="form-group">
      {{ form_row(form.image, { 'attr': {
          'class' : 'form-control-file'
      }}) }}
  </div>
  <div class="form-group">
      {{ form_row(form.category, { 'attr': {
          'class' : 'form-control'
      }}) }}
  </div>
  <div class="form-group">
      {{ form_row(form.Enregistrer, { 'attr': {
          'class' : 'btn btn-primary'
      }}) }}
  </div>
    {{ form_end(form) }}

{% endblock %}
