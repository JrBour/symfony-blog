{% extends 'base.html.twig' %}
{% block body %}
  {{ form_start(form) }}
    <div class="form-group">
      {{ form_row(form.username,{ 'attr': {
        'class' : 'form-control'
      }}) }}
    </div>
    <div class="form-group">
      {{ form_row(form.email,{ 'attr': {
        'class' : 'form-control'
      }}) }}
    </div>
    <div class="form-group">
      {{ form_row(form.plainPassword.first,{ 'attr': {
        'class' : 'form-control'
      }}) }}
    </div>
    <div class="form-group">
      {{ form_row(form.plainPassword.second,{ 'attr': {
        'class' : 'form-control'
      }}) }}
    </div>
    <div class="form-group">
      {{ form_row(form.image,{ 'attr': {
        'class' : 'form-control'
      }}) }}
    </div>
    <div class="form-group">
      {{ form_row(form.role,{ 'attr': {
        'class' : 'form-control'
      }}) }}
    </div>
    <button type="submit" class="btn btn-primary">S'inscrire</button>
  {{ form_end(form) }}

  <p>Déjà un compte ?<a href="{{ path('login')}}"> Connectez-vous !</a></p>
{% endblock %}
