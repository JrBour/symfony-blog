{% extends 'base.html.twig' %}
{% block body %}
  {{ form_start(form) }}
    <div class="form-group">
      {{ form_row(form.username,{ 'attr': {
        'class' : 'form-control'
      }}) }}
    </div>
    <div class="form-group">
      {{ form_row(form.email,{ 'attr': {
        'class' : 'form-control'
      }}) }}
    </div>
    <div class="form-group">
      {{ form_row(form.plainPassword.first,{ 'attr': {
        'class' : 'form-control'
      }}) }}
    </div>
    <div class="form-group">
      {{ form_row(form.plainPassword.second,{ 'attr': {
        'class' : 'form-control'
      }}) }}
    </div>
    <div class="form-group">
      {{ form_row(form.image,{ 'attr': {
        'class' : 'form-control'
      }}) }}
    </div>
    <div class="form-group" style="{% if title is defined %}display: none;{% endif %}">
      {{ form_row(form.role,{ 'attr': {
        'class' : 'form-control'
      }}) }}
    </div>
    {{ form_row(form.save,{ 'attr': {
      'class' : 'btn btn-primary'
    }}) }}
  {{ form_end(form) }}

  <p>{% trans %}register.already_account{% endtrans %}<a href="{{ path('login')}}">{% trans %}register.login{% endtrans %}</a></p>
{% endblock %}
