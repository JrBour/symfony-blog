{% extends 'base.html.twig' %}
{% block title %}{% trans %}signin.sign_in{% endtrans %}{% endblock %}
{% block body %}
  <form action="{{ path('login') }}" method="post">
    <div class="form-group">
      <label for="username">{% trans %}form.username{% endtrans %}</label>
      <input type="text" class="form-control" name="_username"id="username" value="{{lastUsername}}">
    </div>

    <div class="form-group">
      <label for="password">{% trans %}form.password{% endtrans %}</label>
      <input type="password" name="_password" id="password" class="form-control">
    </div>

    <input type="checkbox" id="remember_me" name="_remember_me" checked />
    <label for="remember_me">{% trans %}signin.keep_me_logged{% endtrans %}</label>

    <input type="hidden" name="_target_path" value="/"/>

    <button class="btn btn-primary" type="submit">{% trans %}signin.sign_in{% endtrans %}</button>
  </form>
{% endblock %}