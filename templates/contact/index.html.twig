{% extends 'base.html.twig' %}
{% block body %}
  <h2>Contact</h2>
    {% if success is defined %}
      <p>{{success}}</p>
    {% endif %}
  {{ form_start(form) }}
  <div class="form-group">
    {{ form_row(form.firstname, { 'attr': {
        'class' : 'form-control'
    }}) }}
  </div>
  <div class="form-group">
    {{ form_row(form.lastname, { 'attr' : {
        'class' : 'form-control'
    }}) }}
  </div>
  <div class="form-group">
    {{ form_row(form.mail, { 'attr' : {
        'class' : 'form-control'
    }}) }}
  </div>
  <div class="form-group">
    {{ form_row(form.message, { 'attr' : {
        'class' : 'form-control'
    }}) }}
  </div>
  {{ form_row(form.submit, { 'attr' : {
      'class' : 'btn btn-primary'
  }}) }}
  {{ form_end(form) }}
  {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('show_all_contact') }}"><button type="button" class="btn btn-info">Voir tous les messages</button></a>
  {% endif %}
{% endblock %}
